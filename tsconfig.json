{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "es2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "./package.json"],
  "exclude": ["node_modules/**/*"]
}
